{
  "parser": "babel-eslint",
  "env": {
    "commonjs": true,
    "es6": true
  },
  "globals": {
    "process": false
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    },
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "no-debugger": ["warn"],
    "no-console": ["warn"],
    "no-unused-vars": ["error", { "ignoreRestSiblings": true }],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "semi": ["error", "always"],
    "prettier/prettier": "warn"
  }
}
